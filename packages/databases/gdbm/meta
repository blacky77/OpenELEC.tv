PKG_DEPENDS=""
PKG_BUILD_DEPENDS=""
PKG_PRIORITY="optional"
PKG_SECTION="databases"
PKG_SHORTDESC="database implementation"
PKG_LONGDESC="The GDBM package contains the GNU Database Manager. This is a disk file format database which stores key/data-pairs in single files. The actual data of any record being stored is indexed by a unique key, which can be retrieved in less time than if it was stored in a text file."
PKG_IS_ADDON="no"
PKG_AUTORECONF="no"

