#!/bin/sh

. config/options $1

$SCRIPTS/unpack busybox

setup_toolchain host

cd $BUILD/busybox*
  make distclean
  cp $ROOT/$PKG_DIR/config/$1.conf .config
  make oldconfig

  make HOSTCC="$HOST_CC" \
       ARCH=$TARGET_ARCH \
       CROSS_COMPILE="" \
       EXTRA_CFLAGS="$CFLAGS" \
       V=1 install

  mkdir -p $ROOT/$TOOLCHAIN/bin
    cp -R _install-hosttools/* $ROOT/$TOOLCHAIN
    chmod 4755 $ROOT/$TOOLCHAIN/bin/busybox
