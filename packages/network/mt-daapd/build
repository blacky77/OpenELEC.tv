. config/options $1

cd $PKG_BUILD

make

 ./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --disable-static \
            --enable-shared \
            --disable-sdl \
            --disable-debugging \
	    --with-gdbm-includes=$ROOT/$BUILD/gdbm-1.8.3 \
	    --enable-sqlite3 \
	    --enable-avahi \
	    --enable-mdns \
	    --enable-oggvorbis \
	    --with-gdbm-libs=$ROOT/$BUILD/gdbm-1.8.3/.libs \
#	    --includedir=$ROOT/$BUILD/sqlite-autoconf-3070400 \
	    ac_cv_func_setpgrp_void=yes 

make

$MAKEINSTALL
